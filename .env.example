VITE_SITE_NAME=RelaxShopping
# Firebase Configuration
# Get these from your Firebase project settings
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Paystack Configuration (Client-side - Public Key)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_xxxxx

# Netlify Functions Environment Variables (Server-side only - add via Netlify dashboard)
# PAYSTACK_SECRET_KEY=sk_test_xxxxx
# CHOWDECK_API_KEY=your_chowdeck_key (if available)
# SHOPRITE_API_KEY=your_shoprite_key (if available)
# WA_PROVIDER=meta (or twilio, 360dialog)
# WA_TOKEN=your_whatsapp_token
# WA_PHONE_ID=your_whatsapp_phone_number_id
# TWILIO_SID=your_twilio_sid (if using Twilio)
# TWILIO_TOKEN=your_twilio_token (if using Twilio)
# ADMIN_WHATSAPP_NUMBERS=+234XXXXXXXXXX,+234YYYYYYYYYY

# Optional: Delivery fee (defaults to 400 if not set)
# DELIVERY_FEE_NGN=400
